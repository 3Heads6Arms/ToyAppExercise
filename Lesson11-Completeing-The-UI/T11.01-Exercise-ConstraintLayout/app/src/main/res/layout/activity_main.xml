<?xml version="1.0" encoding="utf-8"?><!-- TODO (17) Surround the Constraint layout with a ScrollView --><!-- COMPLETED (2) Replace the Relative layout with a ConstraintLayout -->
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- COMPLETED (3) Create a TextView for the Passenger label and name -->
    <!-- COMPLETED (4) Use tool:text to set the text value -->
    <TextView
        android:id="@+id/tv_passenger_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/passenger_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_passenger_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_passenger_label"
        tools:text="@string/passenger_name" />

    <!-- TODO (5) Create an ImageView for the left rectangle -->
    <!-- TODO (6) Set the background to the shape_rectangle_stroke drawable -->
    <ImageView
        android:id="@+id/iv_origin"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_rectangle_stroke"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_passenger_name" />

    <!-- TODO (8) Create an ImageView for the rightRectangle -->
    <ImageView
        android:id="@+id/iv_destination"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/shape_rectangle_stroke"
        app:layout_constraintBottom_toBottomOf="@id/iv_origin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_origin" />

    <!-- TODO (7) Create an ImageView for the divider -->
    <ImageView
        android:id="@+id/iv_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryLight"
        app:layout_constraintBottom_toTopOf="@id/iv_destination"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@id/iv_origin"
        app:layout_constraintRight_toLeftOf="@id/iv_destination"
        app:layout_constraintTop_toBottomOf="@id/iv_destination" />


    <!-- TODO (9) Create a TextView for the origin code, the destination code and the flight code -->
    <TextView
        android:id="@+id/tv_origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintBottom_toBottomOf="@id/iv_divider"
        app:layout_constraintLeft_toLeftOf="@id/iv_origin"
        app:layout_constraintRight_toRightOf="@id/iv_origin"
        app:layout_constraintTop_toTopOf="@id/iv_divider"
        tools:text="@string/origin_code" />

    <TextView
        android:id="@+id/tv_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintBottom_toBottomOf="@id/iv_divider"
        app:layout_constraintLeft_toLeftOf="@id/iv_destination"
        app:layout_constraintRight_toRightOf="@id/iv_destination"
        app:layout_constraintTop_toTopOf="@id/iv_divider"
        tools:text="@string/destination_code" />

    <!-- TODO (15) Import the plane image SVG file into the drawable directory and name it art_plane -->
    <!-- TODO (16) Create an ImageView for the plane and set the background to art_plane drawable -->
    <ImageView
        android:id="@+id/iv_plane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_plane"
        android:tint="@color/colorPrimaryLight"
        app:layout_constraintBottom_toTopOf="@id/iv_divider"
        app:layout_constraintLeft_toRightOf="@id/iv_origin"
        app:layout_constraintRight_toLeftOf="@id/iv_destination" />

    <TextView
        android:id="@+id/tv_flight_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
        android:textColor="@color/colorPrimary"
        app:layout_constraintLeft_toRightOf="@id/iv_origin"
        app:layout_constraintRight_toLeftOf="@id/iv_destination"
        app:layout_constraintTop_toBottomOf="@id/iv_divider"
        tools:text="@string/flight_code" />

    <!-- TODO (10) Create a TextView for the time texts and their corresponding labels -->
    <TextView
        android:id="@+id/tv_boarding_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/boarding_time_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_origin" />

    <TextView
        android:id="@+id/tv_boarding_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_boarding_time_label"
        tools:text="@string/boarding_time" />

    <TextView
        android:id="@+id/tv_depature_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/departure_time_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_boarding_time" />

    <TextView
        android:id="@+id/tv_departure_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textColor="@color/colorGood"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_depature_time_label"
        tools:text="@string/departure_time" />

    <TextView
        android:id="@+id/tv_boarding_in_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        android:text="@string/boarding_in_label"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_boarding_time_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_origin" />

    <TextView
        android:id="@+id/tv_boarding_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
        android:textColor="@color/colorBad"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_boarding_time"
        app:layout_constraintLeft_toLeftOf="@id/tv_boarding_in_label"
        tools:text="@string/boarding_in_time" />

    <TextView
        android:id="@+id/tv_arrival_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/arrival_time_label"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_depature_time_label"
        app:layout_constraintLeft_toLeftOf="@id/tv_boarding_in_label" />

    <TextView
        android:id="@+id/tv_arrival_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textColor="@color/colorGood"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_departure_time"
        app:layout_constraintLeft_toLeftOf="@id/tv_boarding_in_label"
        tools:text="@string/arrival_time" />


    <!-- TODO (11) Create an ImageView for the blue table's header -->
    <ImageView
        android:id="@+id/iv_table_header"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp"
        android:background="@color/colorPrimaryLight"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_departure_time" />

    <TextView
        android:id="@+id/tv_terminal_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/terminal_label"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@id/iv_table_header"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintLeft_toLeftOf="@id/iv_table_header"
        app:layout_constraintRight_toRightOf="@id/iv_table_header"
        app:layout_constraintTop_toTopOf="@id/iv_table_header" />

    <TextView
        android:id="@+id/tv_gate_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gate_label"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@id/iv_table_header"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintLeft_toLeftOf="@id/iv_table_header"
        app:layout_constraintRight_toRightOf="@id/iv_table_header"
        app:layout_constraintTop_toTopOf="@id/iv_table_header" />

    <TextView
        android:id="@+id/tv_seat_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seat_label"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@id/iv_table_header"
        app:layout_constraintHorizontal_bias="0.88"
        app:layout_constraintLeft_toLeftOf="@id/iv_table_header"
        app:layout_constraintRight_toRightOf="@id/iv_table_header"
        app:layout_constraintTop_toTopOf="@id/iv_table_header" />
    <!-- TODO (12) Create an ImageView for the blue table's body -->
    <ImageView
        android:id="@+id/iv_table_body"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/tv_terminal"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_table_header" />

    <TextView
        android:id="@+id/tv_terminal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="@id/tv_terminal_label"
        app:layout_constraintRight_toRightOf="@id/tv_terminal_label"
        app:layout_constraintTop_toBottomOf="@id/tv_terminal_label"
        tools:text="@string/terminal" />

    <TextView
        android:id="@+id/tv_gate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/white"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_terminal"
        app:layout_constraintLeft_toLeftOf="@id/tv_gate_label"
        app:layout_constraintRight_toRightOf="@id/tv_gate_label"
        tools:text="@string/gate" />

    <TextView
        android:id="@+id/tv_seat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/white"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_terminal"
        app:layout_constraintLeft_toLeftOf="@id/tv_seat_label"
        app:layout_constraintRight_toRightOf="@id/tv_seat_label"
        tools:text="@string/seat" />

    <!-- TODO (13) Create a TextView for each of the labels and text fields in the blue table -->

    <!-- TODO (14) Create an ImageView for the barcode -->

</android.support.constraint.ConstraintLayout>

